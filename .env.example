# ===========================================
# ADMIN PANEL CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Local Development Database (direct connection)
DATABASE_URL_LOCAL="postgresql://postgres:golfwang@localhost:5432/realms?schema=public"

# Production Database (via SSH tunnel - uses port 5433)
DATABASE_URL_PROD="postgresql://postgres:YOUR_PROD_PASSWORD@localhost:5433/realms?schema=public"

# Active database URL (set automatically based on USE_SSH_TUNNEL)
DATABASE_URL="postgresql://postgres:golfwang@localhost:5432/realms?schema=public"

# ===========================================
# SSH TUNNEL CONFIGURATION (for production)
# ===========================================

# Set to 'true' to enable SSH tunnel to production database
USE_SSH_TUNNEL=false

# VPS SSH Configuration
SSH_HOST=your-vps-ip-or-hostname
SSH_PORT=22
SSH_USER=your-ssh-username

# SSH Authentication (use one of these)
SSH_KEY_PATH=~/.ssh/id_rsa
# SSH_PASSWORD=your-ssh-password  # Less secure, use key instead

# Local port for the tunnel (connects to remote PostgreSQL)
SSH_LOCAL_PORT=5433

# Remote PostgreSQL (inside VPS/Docker network)
SSH_REMOTE_HOST=127.0.0.1
SSH_REMOTE_PORT=5432

# ===========================================
# ADMIN AUTHENTICATION
# ===========================================

# Admin login credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-secure-password

# JWT Configuration
JWT_SECRET=generate-a-secure-random-string-at-least-32-chars
JWT_EXPIRES_IN=24h

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server port
PORT=3001

# Environment
NODE_ENV=development

# Frontend URL (for CORS)
CLIENT_URL=http://localhost:5173

# ===========================================
# OPTIONAL: AUDIT LOGGING
# ===========================================

# Enable audit logging
AUDIT_LOG_ENABLED=true

# Audit log file path (relative to project root)
AUDIT_LOG_PATH=./audit-logs
